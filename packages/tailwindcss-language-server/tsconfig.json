{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "lib": ["ES2022"],
    "rootDir": "..",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@tailwindcss/language-service/*": ["../packages/tailwindcss-language-service/*"]
    }
  },
  "include": ["src", "../packages/tailwindcss-language-service", "../../types"]
}
