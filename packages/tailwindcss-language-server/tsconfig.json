{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["ES2019"],
    "rootDir": "..",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "tailwindcss-language-service/*": ["../packages/tailwindcss-language-service/*"]
    }
  },
  "include": ["src", "../packages/tailwindcss-language-service"]
}
