{
  "include": ["src", "tests", "../../types"],
  "compilerOptions": {
    "module": "ES2022",
    "lib": ["ES2022"],
    "target": "ES2022",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "isolatedDeclarations": true
  }
}
